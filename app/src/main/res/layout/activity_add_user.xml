<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUserActivity">

    <EditText
        android:id="@+id/userAddName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/verticalGuideline"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideline"
        android:hint="Name"
        android:inputType="text"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorBlack" />

    <EditText
        android:id="@+id/userAddUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/verticalGuideline"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideline"
        android:translationY="75dp"
        android:hint="Username"
        android:inputType="text"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"/>

    <EditText
        android:id="@+id/userAddEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/verticalGuideline"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideline"
        android:translationY="150dp"
        android:hint="Email"
        android:inputType="text"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"/>

    <EditText
        android:id="@+id/userAddPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/verticalGuideline"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideline"
        android:translationY="225dp"
        android:hint="Phone Number"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"/>

    <EditText
        android:id="@+id/userAddWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/verticalGuideline"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideline"
        android:translationY="300dp"
        android:hint="Website"
        android:inputType="text"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JPEG SUPPORTED"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideline"
        android:translationY="340dp"
        app:layout_constraintStart_toEndOf="@id/verticalGuideline"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"/>

    <Button
        android:id="@+id/addImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/verticalGuideline"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideline"
        android:translationY="360dp"
        android:text="Add Image From Gallery"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"/>

    <ImageView
        android:id="@+id/imagePickImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:translationY="400dp"
        app:layout_constraintStart_toStartOf="parent"
        android:translationX="75dp"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideline"
        android:contentDescription="User Image" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="50dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="100dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>